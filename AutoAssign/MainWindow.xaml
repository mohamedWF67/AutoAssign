<ui:FluentWindow x:Class="AutoAssign.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 mc:Ignorable="d"
                 Background="Transparent"
                 Title="AutoAssign" Width="450" Height="300"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Mica">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ui:TitleBar  Height="40" Title="AutoAssign"/>
        <TabControl Margin="0,40,0,0" Height="Auto" 
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">
            <TabItem Header="Home">
                <StackPanel Margin="10,0">
                    <StackPanel Grid.Row="0" Orientation="Vertical">
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Height="20"  x:Name="FileName" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"
                               TextAlignment="left" Text="Please select a CSV file" Grid.Column="0"/>
                        <Button Width="150" Content="File input" Click="OpenCsvButton_Click" Grid.Column="1"/>
                    </Grid>
                    <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Fill Style"/>
                            <ComboBox x:Name="FormatChooser"
                                      Width="150"
                                      SelectedIndex="0"
                                      Grid.Column="1">
                                <ComboBoxItem  Content="ID + Name"/>
                                <ComboBoxItem Content="Name + ID"/>
                                <ComboBoxItem Content="Names Then IDs"/>
                                <ComboBoxItem Content="IDs Then Names"/>
                                <ComboBoxItem Content="Names Only"/>
                                <ComboBoxItem Content="IDs Only"/>
                            </ComboBox>
                        </Grid>
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="ID or Email"/>
                        <ComboBox x:Name="ID_Email"
                                  Width="150"
                                  SelectedIndex="0"
                                  Grid.Column="1"
                                  SelectionChanged="ID_Email_OnSelectionChanged">
                            <ComboBoxItem Content="ID"/>
                            <ComboBoxItem Content="Email"/>
                            <ComboBoxItem Content="Custom Email"/>
                        </ComboBox>
                    </Grid>
                    <Grid x:Name="EmailDomainBlock" Visibility="Collapsed" Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="Email Domain"/>
                        <TextBox x:Name="EmailDomainTextBox" VerticalContentAlignment="Center" Text="bue.edu.eg" Grid.Column="1" Width="150" />
                    </Grid>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Settings">
                <StackPanel Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Delay Time" Grid.Column="0" HorizontalAlignment="Left"/>
                        <TextBlock x:Name="DelayValue" Text="0" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                    <Slider x:Name="DelayTimeSlider"
                            Minimum="0"
                            Maximum="1000"
                            TickFrequency="10"
                            IsSnapToTickEnabled="True"
                            ValueChanged="DelayTimeSlider_ValueChanged"/>
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="Move Method" Grid.Column="0"/>
                        <ComboBox x:Name="MoveMethod"
                                  Width="150"
                                  SelectedIndex="0"
                                  SelectionChanged="MoveMethod_OnSelectionChanged"
                                  Grid.Column="1">
                            <ComboBoxItem Content="Forms"/>
                            <ComboBoxItem Content="Excel"/>
                            <ComboBoxItem Content="Excel Form"/>
                        </ComboBox>
                    </Grid>
                    <Grid Margin="0,10,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Version" VerticalAlignment="Center" x:Name="VersionText" />
                        <Button Grid.Column="1" Width="150" Content="Check for updates" Click="CheckUpdates_OnClick"/>
                    </Grid>
                    <Button x:Name="VersionUpdateLink" Click="VersionUpdateLink_OnClick" Content="Install Update" Visibility="Visible" Margin="0,10,0,0" Width="440"/>
                </StackPanel>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="ReadyLabel" VerticalAlignment="Center" Text="Press Ready to start"/>
            <Button Grid.Column="1" Width="70" BorderBrush="Red" BorderThickness="1" x:Name="ReadyBtn" Click="ButtonBase_OnClick"  Content="Not Ready" Padding="5"/>
        </Grid>
        </Grid>
</ui:FluentWindow>
