<ui:FluentWindow x:Class="AutoAssign.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 mc:Ignorable="d"
                 Background="Transparent"
                 ResizeMode="NoResize"
                 Title="AutoAssign" Width="500" Height="450"
                 ExtendsContentIntoTitleBar="True"
                 WindowBackdropType="Mica">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ui:TitleBar  Height="40" Title="AutoAssign"/>
        <TabControl  Margin="0,40,0,0" Height="Auto" 
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">
            <TabItem>
                <TabItem.Header>
                    <TextBlock Margin="5,0,0,0" Text="Home"/>
                </TabItem.Header>
                <StackPanel Margin="10,0">
                    <StackPanel CanHorizontallyScroll="True" Orientation="Vertical">
                        <ui:Card>
                        <StackPanel Orientation="Vertical">
                        <TextBlock Height="20"  x:Name="FileName" VerticalAlignment="Center" 
                                   TextTrimming="CharacterEllipsis"
                                   TextAlignment="Left" Text="Please select a CSV file"/>
                        <Button Margin="0,5,0,0" HorizontalAlignment="Stretch" Content="File input" Click="OpenCsvButton_Click" Grid.Column="1"/>
                        </StackPanel>
                        </ui:Card>
                        <ui:Card x:Name="FormatChooserGrid" Visibility="Collapsed" >
                            <Grid Margin="0,0,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="Fill Style"/>
                                <ComboBox x:Name="FormatChooser"
                                          Width="150"
                                          SelectedIndex="0"
                                          Grid.Column="1">
                                    <ComboBoxItem  Content="ID + Name"/>
                                    <ComboBoxItem Content="Name + ID"/>
                                    <ComboBoxItem Content="Names Then IDs"/>
                                    <ComboBoxItem Content="IDs Then Names"/>
                                    <ComboBoxItem Content="Names Only"/>
                                    <ComboBoxItem Content="IDs Only"/>
                                </ComboBox>
                            </Grid>
                        </ui:Card>
                        <ui:Card x:Name="IndentificationGrid" Visibility="Collapsed" Margin="0,0,0,0" >
                        <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="ID or Email"/>
                                <ComboBox x:Name="ID_Email"
                                  Width="150"
                                  SelectedIndex="0"
                                  Grid.Column="1"
                                  SelectionChanged="ID_Email_OnSelectionChanged">
                                <ComboBoxItem Content="ID"/>
                                <ComboBoxItem Content="Email"/>
                                <ComboBoxItem Content="Custom Email"/>
                            </ComboBox>
                        </Grid>
                            </ui:Card>
                        <ui:Card x:Name="EmailDomainBlock" Visibility="Collapsed" Margin="0,0,0,0" >
                        <Grid  Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="Email Domain"/>
                        <TextBox x:Name="EmailDomainTextBox" VerticalContentAlignment="Center" Text="bue.edu.eg" Grid.Column="1" Width="150" />
                        </Grid>
                            </ui:Card>
                        <ui:Card x:Name="ArangmentStypeBlock" Visibility="Visible" Margin="0,0,0,0" >
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center" Text="Arrangement Style"/>
                            <ComboBox x:Name="ArangmentStypeBox"
                                      Width="150"
                                      SelectedIndex="0"
                                      Grid.Column="1">
                                <ComboBoxItem Content="By Person"/>
                                <ComboBoxItem Content="By Field"/>
                            </ComboBox>                        
                        </Grid>
                            </ui:Card>
                        <ui:Card x:Name="NewAlgoPanel" Margin="0,0,0,0" >
                            <Grid Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- First -->
                                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="5,0">
                                    <TextBlock Margin="0,0,0,5" VerticalAlignment="Center" Text="First Field"/>
                                    <ComboBox x:Name="frstItem" 
                                              SelectedIndex="0">
                                        <ComboBoxItem Content="None"/>
                                        <ComboBoxItem Content="Name"/>
                                        <ComboBoxItem Content="ID"/>
                                        <ComboBoxItem Content="Email"/>
                                        <ComboBoxItem Content="Custom Email"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Second -->
                                <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5,0">
                                    <TextBlock Margin="0,0,0,5" VerticalAlignment="Center" Text="Second Field"/>
                                    <ComboBox x:Name="SecondItem" 
                                        SelectedIndex="0">
                                        <ComboBoxItem Content="None"/>
                                        <ComboBoxItem Content="Name"/>
                                        <ComboBoxItem Content="ID"/>
                                        <ComboBoxItem Content="Email"/>
                                        <ComboBoxItem Content="Custom Email"/>
                                    </ComboBox>
                                </StackPanel>

                                <!-- Third -->
                                <StackPanel Grid.Column="2" Orientation="Vertical" Margin="5,0">
                                    <TextBlock Margin="0,0,0,5" VerticalAlignment="Center" Text="Third Field"/>
                                    <ComboBox x:Name="ThirdItem"
                                              SelectedIndex="0">
                                        <ComboBoxItem Content="None"/>
                                        <ComboBoxItem Content="Name"/>
                                        <ComboBoxItem Content="ID"/>
                                        <ComboBoxItem Content="Email"/>
                                        <ComboBoxItem Content="Custom Email"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                        </ui:Card>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <TextBlock Margin="5,0,0,0" Text="Settings"/>
                </TabItem.Header>
                <StackPanel Margin="10,0">
                    <ui:Card>
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Delay Time" Grid.Column="0" HorizontalAlignment="Left"/>
                                <TextBlock x:Name="DelayValue" Text="0" Grid.Column="1" HorizontalAlignment="Right"/>
                            </Grid>
                            <Slider Margin="0,5,0,0" x:Name="DelayTimeSlider"
                                    Minimum="0"
                                    Maximum="1000"
                                    TickFrequency="10"
                                    IsSnapToTickEnabled="True"
                                    ValueChanged="DelayTimeSlider_ValueChanged"/>
                        </StackPanel>
                    </ui:Card>
                    <ui:Card>
                    <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="Old Algorithm" Grid.Column="0"/>
                        <ui:ToggleSwitch Unchecked="OldAlgoSwitch_OnUnchecked" Checked="OldAlgoSwitch_OnChecked" x:Name="oldAlgoSwitch" Grid.Column="1"/>
                    </Grid>
                    </ui:Card>
                    <ui:Card>
                    <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" Text="Move Method" Grid.Column="0"/>
                        <ComboBox x:Name="MoveMethod"
                                  Width="150"
                                  SelectedIndex="0"
                                  SelectionChanged="MoveMethod_OnSelectionChanged"
                                  Grid.Column="1">
                            <ComboBoxItem Content="Forms"/>
                            <ComboBoxItem Content="Excel"/>
                            <ComboBoxItem Content="Excel Form"/>
                        </ComboBox>
                    </Grid>
                    </ui:Card>
                    <ui:Card>
                        <StackPanel HorizontalAlignment="Stretch">
                                <Grid Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Version" VerticalAlignment="Center" x:Name="VersionText" />
                                    <Button Grid.Column="1" Width="150" Content="Check for updates" Click="CheckUpdates_OnClick"/>
                                </Grid>
                            <Button HorizontalAlignment="Stretch" x:Name="VersionUpdateLink" Click="VersionUpdateLink_OnClick" Content="Install Update" Visibility="Collapsed" Margin="0,10,0,0"/>
                        </StackPanel>
                    </ui:Card>
                </StackPanel>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="1" Margin="10,0,10,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock x:Name="ReadyLabel" VerticalAlignment="Center" Text="Press Ready to start"/>
            <Button Grid.Column="1" Width="90" BorderBrush="Red" BorderThickness="1" x:Name="ReadyBtn" Click="ButtonBase_OnClick"  Content="Not Ready" Padding="5"/>
        </Grid>
        </Grid>
</ui:FluentWindow>
