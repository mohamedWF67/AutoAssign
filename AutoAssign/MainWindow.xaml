<Window x:Class="AutoAssign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AutoAssign" Width="450" Height="300">
    <Grid>
        <TabControl>
            <TabItem Header="Home">
                <StackPanel Orientation="Vertical">
                    <Label x:Name="FileName" VerticalAlignment="Top" Content="Filename: "/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Width="150" Height="50" Content="File input" Click="OpenCsvButton_Click"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,10">
                        <StackPanel HorizontalAlignment="Left">
                            <Label Content="Fill Style"/>
                            <ComboBox x:Name="FormatChooser"
                                      Width="150"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="ID + Name"/>
                                <ComboBoxItem Content="Name + ID"/>
                                <ComboBoxItem Content="Names Then IDs"/>
                                <ComboBoxItem Content="IDs Then Names"/>
                                <ComboBoxItem Content="Names Only"/>
                                <ComboBoxItem Content="IDs Only"/>
                            </ComboBox>
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Left">
                            <Label Content="ID or Email"/>
                            <ComboBox x:Name="ID_Email"
                                      Width="150"
                                      SelectedIndex="0">
                                <ComboBoxItem Content="ID"/>
                                <ComboBoxItem Content="Email"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <TabItem Header="Settings">
                <StackPanel Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Delay Time" Grid.Column="0" HorizontalAlignment="Left"/>
                        <TextBlock x:Name="DelayValue" Text="0" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                    <Slider x:Name="DelayTimeSlider"
                            Minimum="0"
                            Maximum="1000"
                            TickFrequency="10"
                            IsSnapToTickEnabled="True"
                            ValueChanged="DelayTimeSlider_ValueChanged"/>
                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Move Method" Grid.Column="0"/>
                        <ComboBox x:Name="MoveMethod"
                                  Width="150"
                                  SelectedIndex="0"
                                  Grid.Column="1">
                            <ComboBoxItem Content="Forms"/>
                            <ComboBoxItem Content="Excel"/>
                        </ComboBox>
                    </Grid>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
